<resources>

    <style name="Lobby.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/lobby_btn_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/addis</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TextAppearance.MemoryGame.Lobby.Headline" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/brand_cocoa_brown</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.MemoryGame.Lobby.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:textColor">@color/brand_white</item>
        <item name="android:background">@drawable/bg_button_lobby</item>
    </style>

    <style name="Widget.MemoryGame.Lobby.Difficulty.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_difficulty</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brand_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:minWidth">160dp</item>
    </style>

    <style name="Widget.MemoryGame.Lobby.Difficulty.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.MemoryGame.SingleCard" parent="">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Widget.MemoryGame.Board.TextLabel" parent="">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MemoryGame.Board.TextLabel.Score" parent="@style/Widget.MemoryGame.Board.TextLabel">
        <item name="android:textColor">@color/brand_puerto_rico</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MemoryGame.Board.TextLabel.Fails" parent="@style/Widget.MemoryGame.Board.TextLabel">
        <item name="android:textColor">@color/brand_carmine</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MemoryGame.Board.TextLevelValue" parent="@style/Widget.MemoryGame.Board.TextLabel">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brand_cocoa_brown</item>
    </style>

    <style name="Widget.MemoryGame.Button.Borderless.Success" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/bg_button_success</item>
        <item name="android:textColor">@color/brand_white</item>
    </style>

    <style name="Widget.MemoryGame.Button.Borderless.Failed" parent="@style/Widget.MemoryGame.Button.Borderless.Success">
        <item name="android:layout_width">100dp</item>
        <item name="android:background">@drawable/bg_button_retry</item>
    </style>

</resources>
